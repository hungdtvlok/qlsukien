<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp">

    <!-- Họ tên người dùng -->
    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Họ tên: Nguyễn Văn A"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingBottom="4dp"/>

    <!-- Email -->
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: a@gmail.com"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingBottom="4dp"/>

    <!-- Số điện thoại -->
    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone: 0999999999"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingBottom="4dp"/>

    <!-- Tên sự kiện -->
    <TextView
        android:id="@+id/tvEventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sự kiện: Hội thảo XYZ"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingBottom="4dp"/>

    <!-- Thời gian bắt đầu -->
    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bắt đầu: 13/09/2025 22:36"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingBottom="2dp"/>

    <!-- Thời gian kết thúc -->
    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kết thúc: 13/09/2025 22:36"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingBottom="2dp"/>

    <!-- Thời gian đăng ký -->
    <TextView
        android:id="@+id/tvCreatedAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký lúc: 14/09/2025 23:30"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <!-- Nút Hủy đăng ký, Sửa, Xóa nằm trong 1 dòng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="4dp"
        android:spacing="8dp">

        <!-- Nút thêm danh sách -->
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm vào danh sách "
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/btnUnregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy đăng ký"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF4444"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF0000"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
